<h2>Create a new Movie</h2>

<form action="/movies/create" method="post">

    <label>
        Title
        <input type="text" name="title">
    </label>

    <label>
        Genre
        <input type="text" name="genre">
    </label>

    <label>
        Plot
        <input type="text" name="plot">
    </label>
    <br>

    <label>
        Cast

        <select name="cast" multiple>
            {{#each celebrities}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>

    </label>

    <br>

    <button type="submit" value="Create Movie">Create</button>
    <br>

    <a href="/movies">Check all movies</a>

</form>